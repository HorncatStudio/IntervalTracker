<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.horncatstudio.intervaltracker.app.ItHomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREATE"
            android:id="@+id/load_create_button"
            android:layout_gravity="left|top"
            android:textColor="#ff1568ff"
            android:textSize="@dimen/abc_text_size_title_material"
            android:textStyle="bold"
            android:layout_weight=".3" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Training Program (Future!)"
            android:id="@+id/start_train_button"
            android:layout_gravity="left|top"
            android:textColor="#ff7e7b76"
            android:textSize="@dimen/abc_text_size_title_material"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_weight=".3"
            android:enabled="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Active Training Programs (FUTURE!)"
            android:id="@+id/text_label"
            android:layout_gravity="left|top"
            android:textStyle="bold"
            android:enabled="false"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/listView"
            android:layout_gravity="center"
            android:layout_weight=".3" />

    </LinearLayout>

</FrameLayout>
