<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/it_modifydelete_text_dialog"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:autoText="true"
        android:elegantTextHeight="false"
        android:textIsSelectable="false"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/it_remove_text"
                android:id="@+id/remove_interval_button"
                android:layout_margin="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/it_modify_text"
                android:id="@+id/modify_interval_button"
                android:layout_margin="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/it_cancel_text"
                android:id="@+id/cancel_dialog_button"
                android:layout_margin="10dp"
                />

        </TableRow>

    </TableLayout>

</LinearLayout>