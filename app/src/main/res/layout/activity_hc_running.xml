<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/background_dark"
    android:baselineAligned="false">

    <TableLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:weightSum="1"
            android:stretchColumns="*">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <ToggleButton
                    android:id="@+id/startCancelToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="Cancel"
                    android:textOff="Start"
                    android:layout_margin="10dp"
                    android:onClick="onStartAndCancelToggleButton"
                    android:background="@android:color/holo_green_dark"/>

            <ToggleButton
                    android:id="@+id/pauseContinueToggleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="Continue"
                    android:textOff="Pause"
                    android:onClick="onPauseAndContinueToggleButton"
                    android:layout_margin="10dp"
                    android:enabled="false"
                    android:background="@android:color/holo_blue_bright"/>

            <Button
                    android:id="@+id/resetButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:onClick="onResetButton"
                    android:layout_margin="10dp"
                    android:background="@android:color/holo_orange_dark"/>

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/addButton"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:onClick="onAddButton"
        android:text="Add" android:background="#ff3c150e" android:textColor="#fff7fbf2"
        android:textStyle="bold" android:longClickable="false"
            />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Set the time and press start" android:textColor="#fff7fbf2"
        android:layout_gravity="center_horizontal"/>

    <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

</LinearLayout>